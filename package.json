{
  "name": "app-store-plus",
  "description": "App Store Plus - Chrome extension for quickly switching regions on apps.apple.com.",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:safari": "wxt -b safari",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:safari": "wxt build -b safari",
    "build:all": "npm run build && npm run build:firefox && npm run build:safari",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:safari": "wxt zip -b safari",
    "zip:all": "npm run zip && npm run zip:firefox && npm run zip:safari",
    "prepare": "wxt prepare",
    "postinstall": "wxt prepare"
  },
  "keywords": [
    "chrome-extension",
    "wxt",
    "apple"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.277",
    "typescript": "^5.6.3",
    "wxt": "^0.19.0"
  }
}
